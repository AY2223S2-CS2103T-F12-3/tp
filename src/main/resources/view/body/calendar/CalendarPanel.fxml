<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="calendarPlaceholder" styleClass="pane-with-rounded-corner, p0"
            fitToWidth="true" hbarPolicy="NEVER"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="10" styleClass="pa">
        <Label text="Events" styleClass="label-h3" />
        <Label text="Note: recurring events will only show up once on the next earliest date."
               styleClass="label-p" />
        <VBox fx:id="calendarContent" spacing="10" />
    </VBox>
</ScrollPane>
